<% content_for :title, "Categories" %>
<%= render "modal", title: "New Category", modal_id: "newModal" %>
<%= render "modal", title: "Edit Category", modal_id: "editModal" %>
<div class="my-3 d-flex align-items-center gap-4">
  <h1>Categories</h1>
  |
  <%= button_to "New Category", new_category_path,
      data: { turbo_method: "post", bs_toggle: "modal", bs_target: "#newModal" },
      class: "btn btn-success" %>
</div>
<% if @categories.present? %>
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render @categories %>
    </tbody>
  </table>
<% end %>
<%= paginate @categories %>
