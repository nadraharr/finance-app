<% content_for :title, "Log in" %>
<h1 class="my-4 text-center">Log in</h1>
<p style="color: red"><%= notice %></p>
<div class="container d-flex justify-content-center">
  <div class="card p-4 shadow-sm" style="max-width: 500px; width: 100%;">
    <%= form_with url: session_path do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
      <div class="d-grid gap-2">
        <%= form.submit "Log in", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="mt-3 text-center">
  <%= link_to "Back", root_path, class: "btn btn-secondary" %>
</div>