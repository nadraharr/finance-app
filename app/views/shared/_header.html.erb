<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <%= link_to 'Finance', root_path, class: 'navbar-brand' %>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to 'Operations', operations_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Categories', categories_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Reports', reports_index_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Help</a>
          </li>
        </ul>
        <% if current_user %>
          <div class="navbar-nav dropdown">
            <a
            class="nav-link dropdown-toggle"
            href="#"
            id="navbarDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
              <%= (current_user.name if current_user.name.present?) || current_user.email.split("@")[0] %>
            </a>
            <ul
            class="dropdown-menu dropdown-menu-end"
            aria-labelledby="navbarDropdown"
          >
              <li><%= link_to 'Edit profile', edit_user_path(current_user), class: 'dropdown-item' %></li>
              <li><hr class="dropdown-divider" /></li>
              <li><%= link_to 'Log out', session_path, class: 'dropdown-item', data: {turbo_method: :delete} %></li>
            </ul>
          </div>
        <% else %>
          <div class="navbar-nav ">
            <%= link_to 'Log in', new_session_path, class: 'nav-link' %>
          </div>
          <div class="navbar-nav ">
            <%= link_to 'Sign up', new_user_path, class: 'nav-link' %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>
