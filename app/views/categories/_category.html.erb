<tr id="<%= dom_id category %>">
  <td class="col-3"><%= category.name %></td>
  <td class="col-8"><%= category.description %></td>
  <td class="col-1">
    <%= link_to "Edit", edit_category_path(category), class: "btn btn-warning btn-sm" %>
    <div class="d-inline-block"> <%= button_to "Delete", category, method: :delete, class: "btn btn-danger btn-sm ", data: { confirm: "Are you sure?" } %></div>
  </td>
</tr>
