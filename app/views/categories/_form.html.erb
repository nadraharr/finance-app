<div class="container d-flex justify-content-center" >
  <div class="card " style="width: 100%; border: none" >
    <div id="<%= dom_id(category) %>-errors"></div>
    <%= form_with model: category, class: "needs-validation" do |form| %>
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter category name" %>
      </div>
      <div class="mb-4">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_field :description, class: "form-control", placeholder: "Enter description" %>
      </div>
      <div class="d-grid">
        <%= form.submit "Save Category", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>