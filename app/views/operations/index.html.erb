<% content_for :title, "Operations" %>
<%= render "modal", title: "New Operation", modal_id: "newModal" %>
<%= render "modal", title: "Edit Operation", modal_id: "editModal" %>
<div class="my-3 d-flex align-items-center gap-4">
  <h1>Operations</h1>
  |
  <%= button_to "New Operation", new_operation_path, method: :get,
      data: { turbo_stream: true, bs_toggle: "modal", bs_target: "#newModal" },
      class: "btn btn-success" %>
</div>
<% if @operations.present? %>
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Description</th>
        <th class="text-center">Amount</th>
        <th>Category</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render @operations %>
    </tbody>
  </table>
<% end %>
<%= paginate @operations %>